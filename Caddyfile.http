# HTTP-only reverse proxy for Cloudflare-terminated HTTPS.
# This keeps the internet-facing edge on port 80 while shielding Gunicorn from
# slow/bad clients by buffering/handling connections at Caddy.

{
    # Disable admin API endpoint; we manage Caddy via compose only.
    admin off

    # Keep request parsing time-bounded to reduce slowloris impact.
    servers {
        timeouts {
            read_header 10s
            read_body 30s
            idle 5m
        }
    }
}

:80 {
    encode zstd gzip

    header {
        Referrer-Policy "no-referrer"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
    }

    # Static assets should never mutate auth/session state. Calibre-Web may still
    # emit Set-Cookie on these responses; stripping it prevents a race where a
    # parallel asset request overwrites the freshly-authenticated session cookie.
    @static_paths path /static/* /cover/*

    @cf_xfp {
        header Cf-Connecting-Ip *
        header_regexp xfp X-Forwarded-Proto .+
    }

    reverse_proxy @static_paths @cf_xfp calibre-web:8083 {
        header_up Host {http.request.host}
        header_up X-Forwarded-Host {http.request.host}
        header_up X-Scheme {http.request.header.X-Forwarded-Proto}
        header_up X-Forwarded-For {http.request.header.Cf-Connecting-Ip}
        header_up X-Real-IP {http.request.header.Cf-Connecting-Ip}
        header_down -Set-Cookie
    }

    reverse_proxy @static_paths calibre-web:8083 {
        header_up Host {http.request.host}
        header_up X-Forwarded-Host {http.request.host}
        header_up X-Scheme {http.request.scheme}
        header_up X-Forwarded-For {http.request.remote.host}
        header_up X-Real-IP {http.request.remote.host}
        header_down -Set-Cookie
    }

    reverse_proxy @cf_xfp calibre-web:8083 {
        header_up Host {http.request.host}
        header_up X-Forwarded-Host {http.request.host}
        header_up X-Scheme {http.request.header.X-Forwarded-Proto}
        header_up X-Forwarded-For {http.request.header.Cf-Connecting-Ip}
        header_up X-Real-IP {http.request.header.Cf-Connecting-Ip}
    }

    @has_xfp header_regexp xfp X-Forwarded-Proto .+
    reverse_proxy @has_xfp calibre-web:8083 {
        header_up Host {http.request.host}
        header_up X-Forwarded-Host {http.request.host}
        header_up X-Scheme {http.request.header.X-Forwarded-Proto}
        header_up X-Forwarded-For {http.request.remote.host}
        header_up X-Real-IP {http.request.remote.host}
    }

    reverse_proxy calibre-web:8083 {
        header_up Host {http.request.host}
        header_up X-Forwarded-Host {http.request.host}
        header_up X-Scheme {http.request.scheme}
        header_up X-Forwarded-For {http.request.remote.host}
        header_up X-Real-IP {http.request.remote.host}
    }

    log {
        output stdout
        format json
    }
}
