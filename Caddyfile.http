# HTTP-only reverse proxy for Cloudflare-terminated HTTPS.
# This keeps the internet-facing edge on port 80 while shielding Gunicorn from
# slow/bad clients by buffering/handling connections at Caddy.

{
    # Disable admin API endpoint; we manage Caddy via compose only.
    admin off

    # Keep request parsing time-bounded to reduce slowloris impact.
    servers {
        timeouts {
            read_header 10s
            read_body 30s
            idle 5m
        }
    }
}

:80 {
    encode zstd gzip

    header {
        Referrer-Policy "no-referrer"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
    }

    @has_xfp header_regexp xfp X-Forwarded-Proto .+
    reverse_proxy @has_xfp calibre-web:8083 {
        header_up Host {http.request.host}
        header_up X-Forwarded-Host {http.request.host}
        header_up X-Scheme {http.request.header.X-Forwarded-Proto}
    }

    reverse_proxy calibre-web:8083 {
        header_up Host {http.request.host}
        header_up X-Forwarded-Host {http.request.host}
        header_up X-Scheme {http.request.scheme}
    }

    log {
        output stdout
        format json
    }
}
